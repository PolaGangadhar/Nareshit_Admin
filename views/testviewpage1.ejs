    <script>
    // Function to fetch question counts from the API
    async function getQuestionCounts(questionType) {
        try {
            const response = await fetch(`/api/getQuestionCounts/${questionType}`);
            const data = await response.json();
            return data;
        } catch (error) {
            console.error('Error fetching question counts:', error);
            throw error;
        }
    }

    // Function to bind question counts to the HTML elements
    async function bindQuestionCounts(questionType) {
        try {
            const questionCounts = await getQuestionCounts(questionType);

            // Assuming the container has an id of 'questionCountsContainer'
            const container = document.querySelector('nav-bar');
            container.innerHTML = ''; // Clear previous content

            // Iterate through question counts and create HTML elements
            questionCounts.forEach(count => {
                const questionTypeLabel = document.createElement('label');
                questionTypeLabel.textContent = `${count.TypeName}:`;

                const easyInput = createInputElement(count.NumOfEasy, 'EasyNav');
                const mediumInput = createInputElement(count.NumOfMedium, 'MediumNav');
                const hardInput = createInputElement(count.NumOfHard, 'HardNav');

                questionTypeLabel.appendChild(easyInput);
                questionTypeLabel.appendChild(mediumInput);
                questionTypeLabel.appendChild(hardInput);

                container.appendChild(questionTypeLabel);
            });
        } catch (error) {
            console.error('Error binding question counts:', error);
        }
    }

    // Helper function to create input element
    function createInputElement(value, name) {
        const input = document.createElement('input');
        input.type = 'number';
        input.name = name;
        input.style.width = '30px';
        input.value = value;
        input.readOnly = true;

        return input;
    }
