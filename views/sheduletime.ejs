    <script>
        function validateForm() {
        var testName = document.getElementById("testName").value;
        var testDescription = document.getElementById("testDescription").value;
        var startDate = document.getElementById("startDate").value;
        var endDate = document.getElementById("endDate").value;
        var startTime = document.getElementById("startTime").value;
        var endTime = document.getElementById("endTime").value;

        if (testName === "") {
            alert("Please enter the test name");
            return false;
        }
        if (testDescription === "") {
            alert("Please enter the test description");
            return false;
        }
        if (startDate === "") {
            alert("Please select the start date");
            return false;
        }
        if (endDate === "") {
            alert("Please select the end date");
            return false;
        }
        if (startTime === "") {
            alert("Please select the start time");
            return false;
        }
        if (endTime === "") {
            alert("Please select the end time");
            return false;
        }

        var startDateObj = new Date(startDate);
        var endDateObj = new Date(endDate);
        var startTimeObj = new Date("1970-01-01 " + startTime);
        var endTimeObj = new Date("1970-01-01 " + endTime);

        if (startDateObj.getTime() === endDateObj.getTime()) {
            if (startTimeObj.getTime() >= endTimeObj.getTime()) {
                alert("End Time cannot be before or same as Start Time");
                return false;
            }
        } else if (startDateObj > endDateObj) {
            alert("End Date cannot be before Start Date");
            return false;
        }

        return true;
    }

    function login() {
        if (!validateForm()) {
            return;
        }     
        window.location.href = '/listofAssessment';
    }
    </script>  
